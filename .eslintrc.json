{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": ["error", "always"],
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["tests/**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}